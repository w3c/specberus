{
  "name": "specberus",
  "version": "5.5.1",
  "description": "Specberus is a checker used at W3C to validate the compliance of Technical Reports with publication rules.",
  "license": "MIT",
  "main": "lib/validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3c/specberus.git"
  },
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-handlebars": "5.2.0",
    "insafe": "0.5.0",
    "jsdom": "16.4.0",
    "metaviewport-parser": "0.2.0",
    "morgan": "1.10.0",
    "node-w3capi": "1.9.0",
    "promise": "8.1.0",
    "request": "2.88.2",
    "socket.io": "3.0.4",
    "superagent": "6.1.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "cspell": "4.2.5",
    "eslint": "7.17.0",
    "eslint-plugin-jsdoc": "30.7.13",
    "eslint-plugin-node": "11.1.0",
    "expect.js": "0.3",
    "husky": "^4.2.5",
    "jsdoc": "3.6.6",
    "jshint": "2.12.0",
    "minami": "1.2.3",
    "mocha": "8.2.1",
    "nodemon": "2.0.6",
    "nyc": "^15.1.0"
  },
  "scripts": {
    "audit": "npm audit | grep -oE 'https?\\:\\/\\/(www\\.)?(nodesecurity\\.io|npmjs\\.com)\\/advisories\\/[[:digit:]]+' | rev | cut -d '/' -f 1 | rev | diff known-vulns.txt -",
    "cspell": "cspell **/*.css **/*.js",
    "lint": "eslint .",
    "hint": "jshint --exclude node_modules/ .",
    "spelling": "cspell \"**/*.*\"",
    "test": "mocha --timeout 10000",
    "jsdoc": "jsdoc --configure jsdoc.json -r app.js lib/ public/ test/ tools/",
    "coverage": "nyc npm test",
    "build": "npm run lint && npm run hint && npm run test && npm run jsdoc",
    "live": "nodemon --use_strict app",
    "start": "node --use_strict app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run hint && npm run cspell"
    }
  },
  "engines": {
    "node": "14",
    "npm": ">=6"
  }
}
