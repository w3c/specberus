{
  "name": "specberus",
  "version": "3.3.0",
  "description": "Specberus is a checker used at W3C to validate the compliance of Technical Reports with publication rules.",
  "license": "MIT",
  "main": "lib/validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3c/specberus.git"
  },
  "dependencies": {
    "body-parser": "1.17.2",
    "compression": "1.6",
    "express": "4.15.3",
    "express-handlebars": "3.0",
    "insafe": "0.3",
    "metaviewport-parser": "0.0.1",
    "morgan": "1.8.2",
    "promise": "~7.2.0",
    "request": "2.81.0",
    "socket.io": "2.0.1",
    "superagent": "3.5.2",
    "whacko": "0.19"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-as-promised": "7.1.0",
    "coveralls": "2.13.1",
    "expect.js": "0.3",
    "istanbul": "0.4.5",
    "jscs": "3.0.7",
    "jsdoc": "3.4.3",
    "jshint": "2.9.5",
    "mocha": "3.4.2",
    "nsp": "2.6.3"
  },
  "scripts": {
    "coverage": "istanbul cover _mocha",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "jsdoc": "jsdoc -a all -d doc/api/ -e utf8 -r app.js lib/ test/ tools/",
    "lint": "jscs app.js lib/ public/ test/ tools/ views/ && jshint app.js lib/ public/ test/ tools/ views/",
    "nsp": "nsp check",
    "start": "node --use_strict app",
    "test": "npm run lint && mocha"
  },
  "engines": {
    "node": "6 || 8",
    "npm": ">=3"
  }
}
