{
  "name": "specberus",
  "version": "4.0.0",
  "description": "Specberus is a checker used at W3C to validate the compliance of Technical Reports with publication rules.",
  "license": "MIT",
  "main": "lib/validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3c/specberus.git"
  },
  "dependencies": {
    "compression": "1.7.3",
    "express": "4.16.4",
    "express-handlebars": "3.0",
    "insafe": "0.5.0",
    "metaviewport-parser": "0.2.0",
    "morgan": "1.9.1",
    "promise": "8.0.2",
    "request": "2.88.0",
    "socket.io": "2.2.0",
    "superagent": "4.0.0",
    "whacko": "0.19"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "coveralls": "3.0.2",
    "eslint": "5.9.0",
    "eslint-plugin-node": "8.0.0",
    "expect.js": "0.3",
    "istanbul": "0.4.5",
    "jsdoc": "3.5.5",
    "jshint": "2.9.6",
    "minami": "1.2.3",
    "mocha": "5.2.0"
  },
  "scripts": {
    "audit": "npm audit | grep -oP 'https://nodesecurity.io/advisories/(\\d+)' | diff known-vulns.txt -",
    "lint": "eslint app.js lib/ public/ test/ tools/",
    "hint": "jshint app.js lib/ public/ test/ tools/",
    "test": "mocha",
    "jsdoc": "jsdoc --configure jsdoc.json -r app.js lib/ public/ test/ tools/",
    "coverage": "istanbul cover _mocha",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "build": "npm run audit && npm run lint && npm run hint && npm run test && npm run jsdoc",
    "start": "node --use_strict app"
  },
  "engines": {
    "node": "8 || 10",
    "npm": ">=6"
  }
}
