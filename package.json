{
  "name": "specberus",
  "version": "11.12.0",
  "description": "Specberus is a checker used at W3C to validate the compliance of Technical Reports with publication rules.",
  "license": "MIT",
  "main": "lib/validator",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3c/specberus.git"
  },
  "dependencies": {
    "compression": "1.8.1",
    "cors": "2.8.5",
    "doasync": "2.0.1",
    "express": "5.1.0",
    "express-fileupload": "1.5.0",
    "express-handlebars": "8.0.1",
    "file-type": "21.0.0",
    "insafe": "0.5.1",
    "jsdom": "27.0.0",
    "metaviewport-parser": "0.3.0",
    "morgan": "1.10.1",
    "node-w3capi": "2.2.0",
    "promise": "8.3.0",
    "puppeteer": "24.23.0",
    "socket.io": "4.8.0",
    "superagent": "10.2.0",
    "tmp": "0.2.4"
  },
  "devDependencies": {
    "chai": "6.2.0",
    "@rvagg/chai-as-promised": "8.0.1",
    "cspell": "9.0.1",
    "eslint": "9.0.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.0.0-alpha.2",
    "expect.js": "0.3",
    "husky": "9.0.6",
    "lint-staged": "16.2.3",
    "mocha": "11.7.0",
    "nock": "14.0.0",
    "nodemon": "3.0.1",
    "nyc": "17.1.0",
    "prettier": "3.6.2"
  },
  "scripts": {
    "build": "npm run lint && npm run test",
    "coverage": "nyc --reporter=html npm test",
    "cspell": "cspell \"**/*\"",
    "fix": "prettier -w . && eslint --fix .",
    "lint": "eslint . --report-unused-disable-directives && prettier -c .",
    "live": "nodemon --use_strict app",
    "prepare": "husky install",
    "spelling": "cspell \"**/*\"",
    "start": "node --use_strict app",
    "testserver": "nodemon test/lib/testserver.js",
    "test": "NO_THROTTLE=true mocha"
  },
  "engines": {
    "node": "20 || 22",
    "npm": ">=7"
  },
  "lint-staged": {
    "*.js": "eslint --cache",
    "*": [
      "cspell --no-must-find-files",
      "prettier --write --ignore-unknown"
    ]
  },
  "mocha": {
    "colors": true,
    "reporter": "spec",
    "timeout": 40000
  }
}
