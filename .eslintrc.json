{
  "plugins": ["node"],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "overrides": [
    {
      "files": [
        "public/js/*.js"
      ],
      "env": {
        "browser": true,
        "jquery": true
      }
    },
    {
      "files": [
        "test/**/*.js"
      ],
      "env": {
        "mocha": true
      },
      "rules": {
        "node/no-unpublished-require": "off"
      }
    }
  ]
}
