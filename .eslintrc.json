{
  "extends": [
    "eslint:recommended"
  ],
  "overrides": [
    {
      "files": [
        "public/js/*.js"
      ],
      "env": {
        "browser": true,
        "jquery": true,
        "es6": true
      }
    },
    {
      "files": [
        "app.js",
        "lib/**/*.js",
        "tools/**/*.js"
      ],
      "plugins": ["node"],
      "extends": "plugin:node/recommended"
    },
    {
      "files": [
        "test/**/*.js"
      ],
      "env": {
        "mocha": true
      },
      "rules": {
        "node/no-unpublished-require": "off"
      },
      "plugins": ["node"],
      "extends": "plugin:node/recommended"
    }
  ]
}
